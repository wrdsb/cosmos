{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cosmos/igor-types": ["libs/igor-types/src/index.ts"],
      "@cosmos/hagar-types": ["libs/hagar-types/src/index.ts"],
      "@cosmos/azure-functions-shared": [
        "libs/azure-functions-shared/src/index.ts"
      ],
      "@cosmos/sorting-hat": ["libs/sorting-hat/src/index.ts"],
      "@cosmos/sorting-hat-types": ["libs/sorting-hat-types/src/index.ts"],
      "@cosmos/ui": ["libs/ui/src/index.ts"],
      "@cosmos/ui-layout": ["libs/ui-layout/src/index.ts"],
      "@cosmos/ui-navigation": ["libs/ui-navigation/src/index.ts"],
      "@cosmos/powder-coat": ["libs/powder-coat/src/index.ts"],
      "@cosmos/chassis": ["libs/chassis/src/index.ts"],
      "@cosmos/panels": ["libs/panels/src/index.ts"],
      "@cosmos/angular-aad-auth": ["libs/angular-aad-auth/src/index.ts"],
      "@cosmos/msgraph-service": ["libs/msgraph-service/src/index.ts"],
      "@cosmos/home-page": ["libs/home-page/src/index.ts"],
      "@cosmos/profile-page": ["libs/profile-page/src/index.ts"],
      "@cosmos/not-found-page": ["libs/not-found-page/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
